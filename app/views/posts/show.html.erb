<h1><%= @post.title %></h1>

<br>
<br>

<p> <%= @post.body %> </p>

<%= link_to 'Edit', edit_user_post_path(@user, @post), id:"edit_post", remote: true %>
<%= link_to 'Delete', user_post_path(@user, @post),
                      :data => {:confirm => "Are you sure?",
                      :method => "delete"} %>


<br>
<br>
<div class="comments">
<%= link_to "Add a Comment", new_post_comment_path(@post), id: "new_comment", remote: true %>
<Br>
<br>
<br>


<% if @post.comments.any? %>
<h2>Comments:</h2>
  <ul>
  <% @post.comments.each do |comment| %>
    <li><%= link_to comment.body, post_comment_path(@post, comment) %></li>
  <% end %>
  </ul>
  <% end %>

</div>
